<table id="portfolios-list">
  <thead>
    <tr>
      <th>Genre</th>
      <th>Portfolios (name)</th>
      <th>Cover Image</th>
      <th>Armies</th>
      <th>User Name</th>
    </tr>
  </thead>
  <tbody>
    <% portfolios.forEach(function(pf) { %>
      <tr>
        <td><%= pf.genre %></td>
        <td><a href="/portfolios/<%= pf._id %>"><%= pf.pfName %></a></td>
        <td><img src="<%= pf.img %>" class="img-thumbnail" width = "400" height = "400" alt="pf-img"></td>
        <td>
          <ul>
            <% pf.armies.forEach((a) => { %>
              <li><a href="/armies/<%= a._id %>"><%= a.armyName %></a></li>
            <% }) %>
          </ul>
        <td><%= pf.userName %></td>
      </tr> 
    <% }) %>  
  </tbody>
</table>


