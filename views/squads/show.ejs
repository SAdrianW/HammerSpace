<%- include('../partials/header') %>


<table id="squad-details">
  <thead>
    <h3><%= squad.squadName %></h3>
    <tr>
      <th>Genre</th>
      <th>User Name</th>
      <th>Leader</th>
      <th>Description</th>
      <th>Equipment</th>
      <th>Units</th>
      <th>Images</th>
    </tr>
  </thead>
  <tbody>
      <tr>
        <td><%= squad.genre %></td>
        <td><%= squad.userName %></td>
        <td><%= squad.leader %></td>
        <td><%= squad.description %></td>
        <td><%= squad.equipment %></td>       
        <td>
          <ul>
            <% squad.units.forEach((u) => { %>
              <li><a href="/units/<%= u._id %>"><%= u.unitName %></a></li>
            <% }) %>
          </ul>
        </td>
        <td><img src="<%= squad.img %>" alt="squad-img"></td>
      </tr> 
  </tbody>
</table>
  


<%- include('../partials/footer') %>
